<h2>Pass the <%= @test_passage.test.title %> Test</h2>
<p id="notice"><%= notice %></p>
<p>Question: <%= @test_passage.test.questions.index(@test_passage.current_question)+ 1 %> 
  of <%= @test_passage.test.questions.count%></p>
<b>
  <%= @test_passage.current_question.body %>
</b>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids,
                                  @test_passage.current_question.answers,
                                  :id,
                                  :body,
                                  include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label  %>
    </p>
  <% end %>

  <%= form.submit 'Next'  %>
<% end %>
